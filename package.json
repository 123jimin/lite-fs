{
  "name": "@jiminp/lite-fs",
  "version": "0.0.1",
  "description": "A simple fs-like API wrapper of IndexedDB for light application usage.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "clean": "npx rimraf dist tsconfig.tsbuildinfo",
    "prepare": "pnpm build",
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "lint": "npx eslint src/",
    "pretest": "pnpm build",
    "test": "npx mocha \"dist/**/*.spec.js\""
  },
  "keywords": [],
  "author": "Jimin Park",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/123jimin/lite-fs.git"
  },
  "bugs": {
    "url": "https://github.com/123jimin/lite-fs/issues"
  },
  "homepage": "https://github.com/123jimin/lite-fs",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jiminp/eslint-config": "^1.1.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.3",
    "chai": "^6.2.2",
    "eslint": "^10.0.0",
    "fake-indexeddb": "^6.2.5",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "idb": "^8.0.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": ">=10"
      }
    }
  }
}

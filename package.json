{
  "name": "@jiminp/lite-fs",
  "version": "0.1.0",
  "description": "A simple fs-like API wrapper of IndexedDB for light application usage.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "prepare": "pnpm build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/",
    "pretest": "pnpm build",
    "test": "mocha \"dist/**/*.spec.js\""
  },
  "keywords": [
    "filesystem",
    "fs",
    "indexeddb",
    "storage",
    "browser",
    "virtual-filesystem"
  ],
  "author": "Jimin Park",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/123jimin/lite-fs.git"
  },
  "bugs": {
    "url": "https://github.com/123jimin/lite-fs/issues"
  },
  "homepage": "https://github.com/123jimin/lite-fs",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@jiminp/eslint-config": "^1.1.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.3",
    "chai": "^6.2.2",
    "eslint": "^10.0.0",
    "fake-indexeddb": "^6.2.5",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "idb": "^8.0.3"
  }
}